<div class="appear__title-container">
    <span class="appear__title">Hemos Aparecido En</span>
</div>

<div class="appear__all-logos-container">
    <div class="appear__logo-container">
        <img src="{{ section.settings.logo-1 | img_url: 'master'  }}" class="appear__logo" alt="logo de empresa de noticias" decoding=“async”>
    </div>

    <div class="appear__logo-container">
        <img src="{{ section.settings.logo-2 | img_url: 'master'  }}" class="appear__logo" alt="logo de empresa de noticias" decoding=“async”>
    </div>

    <div class="appear__logo-container">
        <img src="{{ section.settings.logo-3 | img_url: 'master'  }}" class="appear__logo" alt="logo de empresa de noticias" decoding=“async”>
    </div>

</div>

