{
    "name": "Appear Section",
    "tag": "section",
    "class": "appear__container",
    "settings": [
        {
            "type": "image_picker",
            "id": "logo-1",
            "label": "Logo noticias 1"
        },
        {
            "type": "image_picker",
            "id": "logo-2",
            "label": "Logo noticias 2"
        },
        {
            "type": "image_picker",
            "id": "logo-3",
            "label": "Logo noticias 3"
        }
    ]
}
