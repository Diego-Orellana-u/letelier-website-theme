<section class="home__container">
        <img src="{{section.settings.vender-hero | img_url: 'master'}}" alt="home-image" class="home__img" decoding=“async”>
        <section class="home__info">
            <h2 class="home__title">{{ section.settings.vender__hero-title }}</h2>
            <p class="home__p">{{ section.settings.vender__hero-desc }}</p>
            <a href="https://letelier.art/pages/contacto" target="_blank">
                <button class="home__btn button" id="home-btn">{{ section.settings.vender__hero-btn }}</button>
            </a>
        </section>
</section>


{% schema %}
{
    "name": "Main",
    "tag": "section",
    "class": "main",
    "settings": [
        {
            "type": "image_picker",
            "id": "vender-hero",
            "label": "Vender Hero"
        },
        {
            "type": "text",
            "id": "vender__hero-title",
            "label": "Vender Page Title"
        },
        {
            "type": "textarea",
            "id": "vender__hero-desc",
            "label": "Vender Page Desc"
        },
        {
            "type": "text",
            "id": "vender__hero-btn",
            "label": "Vender Page button"
        }
    ]
}
{% endschema %}