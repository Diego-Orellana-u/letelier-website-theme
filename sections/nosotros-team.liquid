<div class="team__title-container">
    <h3 class="team__title">Equipo</h3>
</div>

<div class="team__all-members-container">
    <div class="team__individual-member-container">
        <div class="team__img-container">
            <img src="{{ settings.team__member-img-1 | img_url: 'master' }}" class="team__img" alt="Imagen de miembro del equipo" loading="lazy" decoding=“async”>
        </div>

        <div class="team__desc-container">
            <span class="team__member-name">Oscar Orellana</span>
            <span class="team__member-role">Dueño - Anticuario</span>
            <p class="team__member-p">
                {{section.settings.team__desc-1}}
            </p>
        </div>
    </div>

    <div class="team__individual-member-container">
        <div class="team__img-container">
            <img src="{{ settings.team__member-img-2 | img_url: 'master' }}" class="team__img" alt="Imagen de miembro del equipo" loading="lazy" decoding=“async”>
        </div>

        <div class="team__desc-container">
            <span class="team__member-name">María Soledad</span>
            <span class="team__member-role">Dueña - Anticuaria</span>
            <p class="team__member-p">
                {{section.settings.team__desc-2}}
            </p>
        </div>
    </div>

    <div class="team__individual-member-container">
        <div class="team__img-container">
            <img src="{{ settings.team__member-img-3 | img_url: 'master' }}" class="team__img" alt="Imagen de miembro del equipo" loading="lazy" decoding=“async”>
        </div>

        <div class="team__desc-container">
            <span class="team__member-name">Diego Orellana</span>
            <span class="team__member-role">Encargado Tienda Online</span>
            <p class="team__member-p">
                {{section.settings.team__desc-3}}
            </p>
        </div>
    </div>
</div>

{% schema %}
{
    "name": "Nuestro Equipo",
    "tag": "section",
    "class": "team__container",
    "settings":[
        {
            "type": "textarea",
            "id": "team__desc-1",
            "label": "Team description 1"
        },
        {
            "type": "textarea",
            "id": "team__desc-2",
            "label": "Team description 2"
        },
        {
            "type": "textarea",
            "id": "team__desc-3",
            "label": "Team description 3"
        }
    ]
}
{% endschema %}