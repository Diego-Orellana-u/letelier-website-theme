<div class="contact__img-container">
    <img src="{{section.settings.contact | img_url: 'master'}}" width="454" height="700" alt="Imagen Pagina contacto" class="contact__img" decoding=“async”>
</div>

<div class="contact__form-info-container">
    <div class="contact_title-explanation-container">
        <h3 class="contact__title">{{ section.settings.contact-main-title }}</h3>
        <p class="contact__form-explanation">{{ section.settings.contact-main-subtitle }}</p>
    </div>

    <div class="contact__box">
        <div class="contact__form-container">
            <form action="" class="contact__form" id="contact-form">
                <div class="contact__group">
                    <div class="contact__form-box">
                        <label for="name" class="contact__label">Nombre</label>
                        <input type="text" name="user_name" class="contact__input" id="name" required>
                    </div>

                    <div class="contact__form-box">
                        <label for="last_name" class="contact__label">Apellido</label>
                        <input type="text" name="user_name" class="contact__input" id="last_name" required>
                    </div>

                    <div class="contact__form-box">
                        <label for="email" class="contact__label">Correo Electronico</label>
                        <input type="email" name="user_email" class="contact__input" id="email" required>
                    </div>
                </div>

                <div class="contact__form-box">
                    <label for="subject" class="contact__label">Motivo</label>
                    <input type="text" name="user_subject" class="contact__input" id="subject" required>
                </div>

                <div class="contact__form-box contact__area">
                    <label for="message" class="contact__label">Mensaje</label>
                    <textarea name="user_message" id="message" class="contact__input" required></textarea>
                </div>
 
                <button type="submit" class="black__btn">
                    Contactar
                </button>
            </form>
        </div>

        <div class="contact__info-container">
            <div class="contact__contact-container">
                <span class="contact__contact-title span">{{ section.settings.contact-sec-title }}</span>
                <p class="contact__contact-p">{{ section.settings.contact-cta }}</p>
                <span class="contact__contact-subtitle span">Contacto</span>
                <span class="contact__contact span">{{ section.settings.contact-mail }}</span>
                <span class="contact__contact span">{{ section.settings.contact-phone }}</span>
            </div>

            <div class="contact__ubication-container">
                <span class="contact__contact-subtitle span">Ubicados En</span>
                <span class="contact__contact span">Providencia,</span>
                <span class="contact__contact span">Santiago De Chile</span>
            </div>

