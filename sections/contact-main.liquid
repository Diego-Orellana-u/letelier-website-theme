{
    "name": "Contacto",
    "tag": "section",
    "class": "contact__container",
    "settings": [
        {
            "type": "image_picker",
            "id": "contact",
            "label": "Contact"
        },
        {
            "type": "text",
            "id": "contact-main-title",
            "label": "Titulo Principal"
        },
        {
            "type": "textarea",
            "id": "contact-main-subtitle",
            "label": "Subtitulo Principal"
        },
        {
            "type": "text",
            "id": "contact-sec-title",
            "label": "Titulo Secundario"
        },
        {
            "type": "textarea",
            "id": "contact-cta",
            "label": "Texto cta"
        },
        {
            "type": "text",
            "id": "contact-mail",
            "label": "Correo"
        },
        {
            "type": "text",
            "id": "contact-phone",
            "label": "telefono"
        }
    ]
}
{% endschema %}